# Agentic AI Development Toolkit - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
AGENTIC_APP_NAME="Agentic AI Development Toolkit"
AGENTIC_APP_VERSION="2.0.0"
AGENTIC_ENVIRONMENT="development"  # development, testing, staging, production
AGENTIC_DEBUG="true"

# =============================================================================
# API SERVER SETTINGS  
# =============================================================================
AGENTIC_API_HOST="0.0.0.0"
AGENTIC_API_PORT=8080
AGENTIC_API_WORKERS=1
AGENTIC_API_RELOAD="true"

# =============================================================================
# AI PROVIDER SETTINGS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
AGENTIC_OPENAI_MODEL="gpt-4"
AGENTIC_OPENAI_TEMPERATURE=0.7
AGENTIC_OPENAI_MAX_TOKENS=2000

# Anthropic Configuration  
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
AGENTIC_ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# =============================================================================
# DATABASE & STORAGE SETTINGS
# =============================================================================
AGENTIC_DATABASE_URL="sqlite:///./agents.db"
AGENTIC_REDIS_URL="redis://localhost:6379"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
AGENTIC_SECRET_KEY="your-secret-key-change-in-production"
AGENTIC_ACCESS_TOKEN_EXPIRE=30

# =============================================================================
# AGENT SETTINGS
# =============================================================================
AGENTIC_MAX_AGENTS=100
AGENTIC_AGENT_TIMEOUT=300
AGENTIC_MAX_CONCURRENT_TASKS=10

# =============================================================================
# MONITORING & LOGGING SETTINGS
# =============================================================================
AGENTIC_ENABLE_PROMETHEUS="true"
AGENTIC_PROMETHEUS_PORT=9090
AGENTIC_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
AGENTIC_DATA_DIRECTORY="./data"
AGENTIC_LOGS_DIRECTORY="./logs" 
AGENTIC_MODELS_DIRECTORY="./models"

# =============================================================================
# COMMUNICATION SETTINGS
# =============================================================================
AGENTIC_MESSAGE_QUEUE_SIZE=1000
AGENTIC_WEBSOCKET_PORT=8081

# =============================================================================
# TOOL SETTINGS
# =============================================================================
AGENTIC_ENABLE_WEB_SEARCH="true"
AGENTIC_ENABLE_FILE_OPS="true"
AGENTIC_ENABLE_CODE_EXEC="false"  # Set to true only in secure environments

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Uncomment for development
# AGENTIC_DEBUG="true"
# AGENTIC_API_RELOAD="true"
# AGENTIC_LOG_LEVEL="DEBUG"

# =============================================================================
# PRODUCTION SETTINGS  
# =============================================================================
# Uncomment for production
# AGENTIC_ENVIRONMENT="production"
# AGENTIC_DEBUG="false"
# AGENTIC_API_RELOAD="false"
# AGENTIC_LOG_LEVEL="INFO"
# AGENTIC_SECRET_KEY="generate-secure-key-for-production"